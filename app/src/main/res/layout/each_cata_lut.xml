<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:elevation="@dimen/normalCardElevation"
    app:contentPadding="@dimen/normalCardContentPadding"
    app:cardCornerRadius="@dimen/normalCardCornerRadius"

    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cataNameTxt"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20sp"

        />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/contEdt"
                android:hint="Content"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/subBtn"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/contEdt"
                app:layout_constraintRight_toLeftOf="@id/delBtn"


                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/delete"
                android:id="@+id/delBtn"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/subBtn"
                app:layout_constraintRight_toRightOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contReview"

        />

    </LinearLayout>
</androidx.cardview.widget.CardView>